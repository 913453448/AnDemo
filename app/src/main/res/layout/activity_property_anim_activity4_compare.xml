<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_property_anim_activity4_compare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cisetech.animationdemo.demo.PropertyAnimActivity4_compare"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补间动画"
            android:onClick="tweenAnim"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画"
            android:onClick="propertyAnim"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancle"
            android:onClick="cancle"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_anim_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加油，骚年！！"
        android:textSize="18sp"
        android:textColor="#fff"
        />
</LinearLayout>
