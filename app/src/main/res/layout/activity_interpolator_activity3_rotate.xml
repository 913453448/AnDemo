<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_anim1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cisetech.animationdemo.demo.BasicAnimXmlActivity1"
    >
    <GridView
        android:id="@+id/gv_type"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gv_type"
        android:id="@+id/tv_anim"
        android:gravity="center"
        android:text="加油，骚年!!!"
        android:textColor="@color/colorPrimary"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#ff00"
        />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@+id/tv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:scrollbars="vertical"
        />
</RelativeLayout>
