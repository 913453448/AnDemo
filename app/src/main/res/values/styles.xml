<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_window_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_window_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_window_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_window_right_out</item>
    </style>
</resources>
