<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/animStyle</item>
    </style>

    <style name="animStyle">
        <item name="android:windowEnterAnimation">@anim/anim_window_left_in</item>
        <item name="android:windowExitAnimation">@anim/anim_window_right_out</item>
    </style>
</resources>
